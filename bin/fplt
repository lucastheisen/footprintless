#!/bin/bash


# PODNAME: fplt

PROJECT_DIR="$(cd -P "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
FPL_CONFIG_DIRS=$PROJECT_DIR/t/config/entities
FPL_CONFIG_PROPERTIES=$PROJECT_DIR/t/config/credentials.pl
PERL5LIB=$PROJECT_DIR/lib:$PERL5LIB

export PERL5LIB FPL_CONFIG_DIRS FPL_CONFIG_PROPERTIES;

$PROJECT_DIR/bin/fpl "$@"
